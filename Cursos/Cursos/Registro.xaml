<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cursos.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Registro" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>

            </Frame>
            <Label Text="Email" TextColor="Black" FontFamily="Bold" />
            <Entry Placeholder="example@gmail.com" x:Name="txtEmailReg" Keyboard="Email" />
            <Label Text="Contraseña" TextColor="Black" FontFamily="Bold" />
            <Entry Placeholder="********" x:Name="txtContraReg" IsPassword="True" />
            <Label Text="Nombre Completo" TextColor="Black" FontFamily="Bold" />
            <Entry Placeholder="Elon Musk" x:Name="txtNombreReg" />
            <Label Text="Edad" TextColor="Black" FontFamily="Bold" />
            <Entry Placeholder="45" x:Name="txtEdadReg" Keyboard="Numeric" />
            <Button Text="Registrar" Clicked="btn_Registrar" BackgroundColor="#212df3" TextColor="White" HorizontalOptions="Center" 
                VerticalOptions="Center" FontSize="16" CornerRadius="5" WidthRequest="200" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>