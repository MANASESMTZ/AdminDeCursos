<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cursos.MainPage">

    <ContentPage.Content>
    <StackLayout>

            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Inicio" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Button Text="Registrar Empleados" Clicked="OnRegistrarEmpleadosClicked" BackgroundColor="#212df3" TextColor="White" HorizontalOptions="Center" 
                VerticalOptions="Center" FontSize="16" CornerRadius="5" WidthRequest="200" />

            <Button Text="Registrar Cursos" Clicked="OnRegistrarCursosClicked" BackgroundColor="#212df3" TextColor="White" HorizontalOptions="Center" 
                VerticalOptions="Center" FontSize="16" CornerRadius="5" WidthRequest="200" />

            <Button Text="Seguimiento del curso" Clicked="OnSeguimientoClicked" BackgroundColor="#212df3" TextColor="White" HorizontalOptions="Center" 
                VerticalOptions="Center" FontSize="16" CornerRadius="5" WidthRequest="200"  />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
